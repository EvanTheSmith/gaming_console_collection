<p>Here are all users on the site. Click on an individual user to view their consoles.</p>

<table class="redleft">
<% @users.each do |user| %>
    <% if !user.id.even? %>
    <tr><td>
        <a href="/users/<%= user.slug %>"><%= user.user_name %></a>
    </td>
    <% else %>
    <td>
        <a href="/users/<%= user.slug %>"><%= user.user_name %></a>
    </td></tr>
    <% end %>
<% end %>

<% if !@users.last.id.even? %>
</tr>
<% end %>
</table>